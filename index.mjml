        </mj-section>
        <!-- Divider -->
        <mj-section>
            <mj-column>
                <mj-divider  />
            </mj-column>
        </mj-section>
        <!-- Recipe 2 -->
        <mj-section direction="rtl">
            <mj-column padding="9px">
                <mj-image src="https://i.ibb.co/vk9rqHm/smoothie.jpg" alt="smoothie" border="0" padding="0 9px" />
            </mj-column>
            <mj-column>
                <mj-text padding="9px 18px" align="left" line-height="18.2px">
                    <span class="mb-12" style="font-size: 24px; line-height: 26.4px;">Strawberry Ginger Lemonade Smoothie</span>
                    <br />
